#!/usr/bin/env bash
#
#						Version Functions
#						these fetch the new version and
#						turns them into usable variables
version_NewMonero()
{
	moneroLatestGithub="https://github.com/monero-project/monero/releases/latest"
	moneroVar="https://downloads.getmonero.org/cli/monero-linux-x64-v.*"
	moneroTarName="monero-linux-x64-.*"
	monero_NewVer="$(wget -qO- "$moneroLatestGithub" | grep -o "$moneroVar" | grep -o "$moneroTarName" | awk '{print $1}' | sed 's/.tar.*//')"
}

version_NewMoneroBash()
{
	mBashLatestGithub="https://github.com/hinto-janaiyo/monero-bash/releases/latest"
	mBashVar="/hinto-janaiyo/monero-bash/releases/download/.*/monero-bash-v.*"
	mBashTarName="monero-bash-v.*"
	moneroBash_NewVer="$(wget -qO- "$mBashLatestGithub" | grep -o "$mBashVar" | grep -o "$mBashTarName" | awk '{print $1}' | sed 's/.tar.*//')"
}

version_NewXMRig()
{
	xmrigLatestGithub="https://github.com/xmrig/xmrig/releases/latest"
	xmrigVar="xmrig/xmrig/releases/download/.*/xmrig.*linux-static-x64.*"
	xmrigTarName="xmrig-.*"
	xmrig_NewVer="$(wget -qO- "$xmrigLatestGithub" | grep -o "$xmrigVar" | grep -o "$xmrigTarName" | awk '{print $1}' | sed 's/.tar.*//')"
}

version_NewP2Pool()
{
	p2poolLatestGithub="https://github.com/SChernykh/p2pool/releases/latest"
	p2poolVar="SChernykh/p2pool/releases/download/.*/p2pool-.*-linux-x64.*"
	p2poolTarName="p2pool-.*-linux-x64"
	p2pool_NewVer="$(wget -qO- "$p2poolLatestGithub" | grep -o "$p2poolVar" | grep -o "$p2poolTarName" | awk '{print $1}' | sed 's/.tar.*//')"
}
